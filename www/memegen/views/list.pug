extends layout

block content
  #app.container
    h1 #{title}
    .row(v-if='!meme_list.length') No memes for you!
    .row(v-else)
      ul.collection.col.s12.l6
        li(is='list', v-for='(meme, index) in meme_list', v-bind:key='index', v-bind:name='meme.name', v-on:remove='removeMeme(index)')
    .row
      a.btn-small.waves-effect.waves-light.grey(href='/meme/create')
        i.material-icons.left add_circle
        | Create meme
    .row
      p #{user.local.email}
    .row
      a.btn-small.waves-effect.waves-light.grey(href='/')
        i.material-icons.left home
        | Home page
      a.btn-small.waves-effect.waves-light.grey(href='/profile')
        i.material-icons.left account_circle
        | Profile
      a.btn-small.waves-effect.waves-light.grey(href='/logout')
        i.material-icons.left exit_to_app
        | Logout
append footer
  script(src='/javascripts/meme.js')
