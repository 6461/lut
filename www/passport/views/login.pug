extends layout

block content
  #app.container
    h1 #{title}
    .row
      // show any messages that come back with authentication
      if message.length > 0
        .card-panel.white-text.red.darken-2 #{message}
      // LOGIN FORM
      form(action='/login', method='post')
        .row
          .input-field.col.s12
            i.material-icons.prefix mail_outline
            input#email(type='email', name='email')
            label(for='email') Email
        .row
          .input-field.col.s12
            i.material-icons.prefix security
            input#password(type='password', name='password')
            label(for='password') Password
        button.btn-small.waves-effect.waves-light.blue(type='submit', name='action')
          | Login
          i.material-icons.left account_circle
    .row
      hr
      p
        | Need an account? 
        a(href='/signup') Signup
      p
        | Or go 
        a(href='/') home
        | .
